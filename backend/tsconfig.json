{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "typeRoots": ["./src/types"]
    },
    "include": ["src/**/*", "src/types/*.d.ts"],
    "exclude": ["node_modules", "**/*.test.ts"],
  }